<%- include('patrials/header') %> 
<div class="home">
  <%- include('patrials/backnav', {content:content, postsSorted:postsSorted})%>

  <section class="home_posts-container">
    <% for( let index = 0; index < posts.length; index++ ) { %>
      <article class="home_single-post">
        <div class="single-post_image">
          <img src="./uploads/images/<%= posts[index].image %>"/>
        </div>
        <div class="single-post_text">
          <h2 class="heading heading--small">
            <%= posts[index].title %>
          </h2>
          <p class="text text--small">
          <%= posts[index].date.getHours() %>:<%= ('0'+posts[index].date.getMinutes()).slice(-2) %>
          <%= posts[index].date.getDate() %>/<%= (posts[index].date.getMonth())+1%>/<%= posts[index].date.getFullYear()%>
          </p>
          <p class="text">
            <%= posts[index].content.substring(0, 250) %> <a class="home_read-more" href="/post/<%=posts[index].postId%> ">czytaj wiÄ™cej...</a>
          </p>
          <p class="text text_author text--small">
            Autor: <%= posts[index].author %>
          </p>
        </div>
      </article>
    <% } %>
  </section>
</div>
<%- include('patrials/footer') %> 


